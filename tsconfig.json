{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "outDir": "dist",
        "lib": ["ES2020"],
        "target": "ES2020",
        "module": "ES2015",
        "moduleResolution": "node",
        "alwaysStrict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "declaration": true,
        "noUnusedLocals": true,
        "esModuleInterop": true
    },
    "include": ["src/*.ts", "src/**/*.ts"]
}
